<body>
<h1>Speed Meeting App</h1>

<p>This is a simple speed meeting app that uses sockets and threading to randomly match users with each other for video calls.</p>

<form action="/start" method="post">
<input type="text" name="name" placeholder="Your name">
<input type="submit" value="Start">
</form>

<video muted="true" id="video"></video>

<script>
// This script is used to start the speed meeting app.

function start() {
  // Get the user's name from the form.
  var name = document.querySelector("input[name='name']").value;

  // Create a new SpeedMeetingApp object.
  var app = new SpeedMeetingApp();

  // Start the app.
  app.run();

  // Add a listener for the "mute" event.
  app.on("mute", function() {
    // Mute the video.
    document.querySelector("#video").muted = true;
  });

  // Add a listener for the "unmute" event.
  app.on("unmute", function() {
    // Unmute the video.
    document.querySelector("#video").muted = false;
  });

  // Check if there are any other users available to chat.
  app.checkForOtherUsers();
}

// Call the start function when the page loads.
window.onload = start;
</script>
